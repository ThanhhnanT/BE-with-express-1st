extends ../../layouts/default.pug
include ../../mixins/categoryTree.pug

block content
    h1(class="mb-4") Chỉnh sửa sản phẩm 
    //- h2 #{item}
    form(
        action = `${prefixAdmin}/product/edit/change/${item.id}`
        id="form-edit-product"
        method="POST"
        enctype="multipart/form-data"
    )
        div(class="form-group")
            label(for="title") Tiêu đề
            input(
                type="text"
                class="form-control"
                id="title"
                name="title"
                value = item.title
                required
            )
        div(class = "form-group")
            label(for="product_category_id") Danh mục
            select(
                name="product_category_id"
                id="product_category_id"
                class="form-control"
            )
                option(value="") -- Chọn danh mục --
                if (category)
                    +categoryTree(category,1, item.product_category_id)
        div(class="form-group")
            label(for="desc") Mô tả
            textarea(
                class="form-control"
                id="desc"
                name="description"
                rows="5" 
            ) !{item.description}
        div(class="form-group")
            label(for="price") Giá
            input(
                type="number"
                class="form-control"
                id="price"
                name="price"
                min="0"
                value = item.price
            )
        div(class="form-group")
            label(for="discount") % Giảm giá
            input(
                type="number"
                class="form-control"
                id="discount"
                name="discountPercentage"
                min="0"
                value= item.discountPercentage
            )
        div(class="form-group")
            label(for="stock") Số lượng
            input(
                type="number"
                class="form-control"
                id="stock"
                name="stock"
                value=item.stock
                min="0"
            )
        div(class="form-group" upload-image)
            label(for="thumbnail") Ảnh
            input(
                type="file"
                class="form-control-file"
                id="thumbnail"
                name="thumbnail"
                accept="image/*"
                upload-image-input
            )
            img(
                src=item.thumbnail
                upload-image-preview
                alt=""
            )
        div(class="form-group")
            label(for="position") Vị trí
            input(
                type="number"
                class="form-control"
                id="position"
                name="position"
                min="1",
                value=item.position
            )
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusActive"
                name="status"
                value="active"
                checked= item.status=="active" ? true:false
            )
            label(for="statusActive" class="form-check-label") Hoạt động
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusActive"
                name="status"
                value="non-active"
                checked= item.status=="non-active" ? true:false
            )
            label(for="statusActive" class="form-check-label") Dừng hoạt động
        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Cập nhật


    script(src="/admin/js/product.js")
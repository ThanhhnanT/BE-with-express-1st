extends ../../layouts/default.pug
include ../../mixins/filterStatus.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug
include ../../mixins/formChangeMulti.pug

block content 
    h1 Danh sách sản phẩm 

    .card.mb-3 
        .card-header Bộ lọc và tìm kiếm 
        .card-body 
            .row 
                .col-6 
                    +filterStatus(filterStatus)                    
                .col-6 
                    +search(keyword)

    .card.mb-3 
        .card-header Danh sách sản phẩm 
        .card-body
            +form-change-multi(`http://localhost:3000/admin/product/change-multi`)
            table(
                class="table table-hover table-sm "
                checkbox-multi 
            )
                thead   
                    tr  
                        th 
                            input(type="checkbox" name="checkAll")
                        th STT 
                        th Hình ảnh 
                        th Tiêu đề 
                        th Giá 
                        th Trạng thái 
                        th Hành động
                tbody  
                    each item, index in product
                        tr
                            td 
                                input(
                                    type="checkbox"
                                    name="id"
                                    value=item.id
                                ) 
                            td #{index +1}
                            td 
                                img(
                                    src=item._doc.link
                                    alt=item.title 
                                    width="100px"
                                    height="auto"
                                )
                            td #{item.title}
                            td #{item.price} 
                            td 
                                if(item.status == "active")
                                    a(href="javascript:;" data-id=item.id data-status = "active" button-change-status class="badge badge-success") Hoạt động
                                else
                                    a(href="javascript:;" data-id=item.id data-status = "non-active" button-change-status class="badge badge-danger") Dừng hoạt động
                            td  
                                button(class="btn btn-warning btn-sm") Sửa
                                button(class="btn btn-danger btn-sm ml-1") Xóa 
        +pagination(pagination)
        form(
            action=``
            method="GET"
            id = "form-change-status"
            data-path = `${prefixAdmin}/product/change-status`
        )
    script(src="/admin/js/product.js")

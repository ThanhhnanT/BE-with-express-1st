extends ../../layouts/default.pug 

block content
    h1(class = "mb-3") Nhóm quyền 

    .card.mb-3 
    .card-header Danh sách
    .card-body
        .row
            .col-2.offset-10
                a(href=`${prefixAdmin}/permission/create` class="btn btn-outline-success") + Thêm mới
    table(
                class="table table-hover table-sm "
                checkbox-multi 
            )
                thead   
                    tr  
                        th STT 
                        th Nhóm quyền 
                        th Mô tả ngắn
                        th Hành động
                tbody  
                    each item, index in permission
                        tr 
                            td #{index + 1}
                            td #{item.title}
                            td !{item.description}
                            td  
                                a(href=`${prefixAdmin}/permission/detail/${item.id}` class="btn btn-primary btn-sm") Chi tiết
                                a(href=`${prefixAdmin}/permission/edit/${item.id}` class="btn btn-warning btn-sm ml-1") Sửa
                                button(class="btn btn-danger btn-sm ml-1" data-id = item.id button-delete) Xóa 
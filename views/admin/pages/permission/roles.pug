extends ../../layouts/default.pug

block content 
    h1 Phân quyền 
    //- p #{roles} 
    if(roles)
        div(dataRoles=roles)
    div(class="text-right")
        button(
            type="submit"
            class="btn btn-primary mb-3"
            button-submit
        ) Cập nhật 
    
    table(
        class = "table table-hover table-sm"
        table-permission
    )
        thead 
            tr 
                th Tính năng 
                each item in roles 
                    th(class="text-center") #{item.title}
        tbody
            tr(data-name="id")
                td 
                each item in roles 
                    td(class="text-center") 
                        input(type="text" value=item.id)
            
            //- Product
            tr 
                td(colspan="4")
                    b Sản phẩm 
            tr(data-name="product_view")
                td Xem 
                each item in roles 
                    td(class="text-center")
                        input(type="checkbox" value=item.id)
            tr(data-name="product_create")
                td Thêm mới 
                each item in roles 
                    td(class="text-center")
                        input(type="checkbox" value=item.id)
            tr(data-name="product_edit")
                td Chỉnh sửa 
                each item in roles 
                    td(class="text-center")
                        input(type="checkbox" value=item.id)
            tr(data-name="product_delete")
                td Xóa 
                each item in roles 
                    td(class="text-center")
                        input(type="checkbox" value=item.id)

            //- Danh mục
            tr 
                td(colspan="4")
                    b Danh mục sản phẩm 
            tr(data-name="product-categor_view")
                td Xem 
                each item in roles 
                    td(class="text-center")
                        input(type="checkbox" value=item.id)
            tr(data-name="product-categor_create")
                td Thêm mới 
                each item in roles 
                    td(class="text-center")
                        input(type="checkbox" value=item.id)
            tr(data-name="product-categor_edit")
                td Chỉnh sửa 
                each item in roles 
                    td(class="text-center")
                        input(type="checkbox" value=item.id)
            tr(data-name="product-categor_delete")
                td Xóa 
                each item in roles 
                    td(class="text-center")
                        input(type="checkbox" value=item.id)
            //- Role
            tr 
                td(colspan="4")
                    b Nhóm quyền 
            tr(data-name="roles_view")
                td Xem 
                each item in roles 
                    td(class="text-center")
                        input(type="checkbox" value=item.id)
            tr(data-name="roles_create")
                td Thêm mới 
                each item in roles 
                    td(class="text-center")
                        input(type="checkbox" value=item.id)
            tr(data-name="roles_edit")
                td Chỉnh sửa 
                each item in roles 
                    td(class="text-center")
                        input(type="checkbox" value=item.id)
            tr(data-name="roles_delete")
                td Xóa 
                each item in roles 
                    td(class="text-center")
                        input(type="checkbox" value=item.id)

            //- Phân quyền
            tr 
                td(colspan="4")
                    b Phân quyền 
            tr(data-name="permission_view")
                td Phân quyền 
                each item in roles 
                    td(class="text-center")
                        input(type="checkbox" value=item.id)

            //- Account
            tr 
                td(colspan="4")
                    b Tài khoản 
            tr(data-name="account_view")
                td Xem 
                each item in roles 
                    td(class="text-center")
                        input(type="checkbox" value=item.id)
            tr(data-name="account_create")
                td Thêm mới 
                each item in roles 
                    td(class="text-center")
                        input(type="checkbox" value=item.id)
            tr(data-name="account_edit")
                td Chỉnh sửa 
                each item in roles 
                    td(class="text-center")
                        input(type="checkbox" value=item.id)
            tr(data-name="account_delete")
                td Xóa 
                each item in roles 
                    td(class="text-center")
                        input(type="checkbox" value=item.id)    
    form(
        id="form-change-permission"
        enctype = "multipart/form-data"
        method="POST"
        action=`${prefixAdmin}/permission/roles`
    )
        div(class="form-group")
            input(
                type="text"
                class='form-control'
                name='permissions'
            )
    script(src="/admin/js/roles.js")
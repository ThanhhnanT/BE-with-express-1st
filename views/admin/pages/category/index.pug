extends ../../layouts/default.pug
include ../../mixins/tableTree.pug
block content 
    .card.mb-3 
    .card-header Danh sách
    .card-body
        .row
            .col-2.offset-10
                a(href=`${prefixAdmin}/category/create` class="btn btn-outline-success") + Thêm mới
    table(
                class="table table-hover table-sm "
                checkbox-multi 
            )
                thead   
                    tr  
                        th 
                            input(type="checkbox" name="checkAll")
                        th STT 
                        th Hình ảnh 
                        th Tiêu đề 
                        th Vị trí 
                        th Trạng thái 
                        th Hành động
                tbody  
                    +tableTree(category)
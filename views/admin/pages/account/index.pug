extends ../../layouts/default.pug 

block content 
    h1 Danh sách tài khoản 

    .card.mb-3 
        .card-header Danh sách 
        .card-body 
            .row 
                .col-8 
                .col-4.text-right 
                    a(
                        href=`${prefixAdmin}/account/create`
                        class='btn btn-success'
                    )  + Thêm mới
    
    table(
                class="table table-hover table-sm "
                checkbox-multi 
            )
                thead   
                    tr  
                        th STT 
                        th Avatar 
                        th Tên tài khoản
                        th Phân quyền
                        th Email
                        th Hành động
                tbody  
                    each item, index in account
                        tr 
                            td #{index + 1}
                            td 
                                img(
                                    src=item.avatar 
                                    alt=item.fullName
                                    style="width: 100px"
                                )
                            td #{item.fullName}
                            td #{item.role.title}
                            td #{item.email}
                            td  
                                a(href=`${prefixAdmin}/account/detail/${item._id}` class="btn btn-primary btn-sm") Chi tiết
                                a(href=`${prefixAdmin}/account/edit/${item._id}` class="btn btn-warning btn-sm ml-1") Sửa
                                button(class="btn btn-danger btn-sm ml-1" data-id = item._id button-delete) Xóa     
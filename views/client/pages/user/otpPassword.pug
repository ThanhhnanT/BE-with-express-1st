extends ../../layout/default.pug
include ../../mixins/box-head.pug
include ../../mixins/product-layout.pug 

block content 
    .container.my-5 
        .row.justify-content-center 
            .col-8 
                h1(class="text-center") Đăng nhập tài khoản 
                form(
                    action="/user/password/otp"
                    method="POST"
                    enctype = "multipart/form-data"
                )
                    div(class="form-group")
                        label(for='email') Email  
                        input(
                            type='text'
                            class='form-control'
                            id='email'
                            name='email' 
                            required 
                            value = email 
                            readonly
                        )
                    div(class="form-group")
                        label(for='otp') Nhập mã OTP  
                        input(
                            type='text'
                            class='form-control'
                            id='otp'
                            name='otp' 
                            required 
                        )
                    div(class='form-group')
                        button(
                            type='submit'
                            class='btn btn-primary btn-block'
                        ) Xác thực
                        
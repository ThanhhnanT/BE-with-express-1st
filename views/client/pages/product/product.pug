extends ../../layout/default.pug
include ../../mixins/box-head.pug

block content 
    .container.my-3 
        .row 
            .col-12 
                +box-head("Danh sách sản phẩm")                 
        .row 
            each item in products
                .col-4.mb-3 
                    .product-item 
                        .inner-image 
                            img(src=`${item._doc.link}`, alt=item.title)

                            h3.inner-title #{item.title}
                            .inner-price-new #{item.priceNew}
                            .inner-price-old #{item.price}
                            .inner-discount -#{item.discountPercentage}%
                            // Thêm dòng này để kiểm tra giá trị thumbnail
                            p vui chơi nhé #{item.link} 

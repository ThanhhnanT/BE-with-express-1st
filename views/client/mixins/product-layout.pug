mixin product-layout(product)
    .row 
                each item in product 
                    .col-4.mb-3 
                        .product-item 
                            .inner-image 
                                img(src=item.thumbnail, alt = item.title)
                            .inner-content 
                                h3.inner-title 
                                    a(href=`/product/${item.slug}`) #{item.title}
                                .inner-price-new #{item.price}
                                .inner-price-old #{item.price}
                                .inner-discount -#{item.discountPercentage}%
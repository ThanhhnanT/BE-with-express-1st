include ../mixins/sub-menu.pug

header.header 
    .container 
        .row.align-item-center 
            .col-3 
                .inner-logo 
                    a(href="/")
                        img(src=setting.logo, alt="Logo")
            .col-5 
                form(
                    action='/search'
                    method='GET'
                )
                    div(class='form-group d-flex mb-0')
                        input(
                            type='text'
                            placeholder='Nhập từ khóa...'
                            class='form-control'
                            name='keyboard'
                            value=keyboard
                        )
                        button(
                            type='submit'
                            class='btn btn-primary'
                        ) Tìm
            .col-4 
                .inner-menu 
                    ul 
                        li 
                            a(href="/") Trang chủ
                        li(class="sub-menu") 
                            a(href="/product") Sản phẩm
                            +sub-menu(category)
                        li
                            a(href='/cart') Giỏ hàng (#{minicart ? minicart.totalQuantity : "0"})
                        if(user)
                            li 
                                a(href=`/detail/${user.id}`) #{user.fullName}
                            li 
                                a(href=`/user/friend`) Bạn bè 
                            li 
                                a(href=`/user/logout`) Đăng xuất
                        else 
                            li
                                a(href='/user/register') Đăng ký
                                a(href='/user/login') Đăng nhập
                            
                            